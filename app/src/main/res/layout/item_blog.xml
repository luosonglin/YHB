<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="景海鹏陈冬踏上回家之路asdasdasdasdasd"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <View
                    android:id="@+id/viewFill"
                    android:layout_width="1dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/llCenterImg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/ivCenterImg1"
                        android:layout_width="0dp"
                        android:layout_height="90dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:src="@drawable/right_arrow_icon"
                        android:contentDescription="TODO" />

                    <ImageView
                        android:id="@+id/ivCenterImg2"
                        android:layout_width="0dp"
                        android:layout_height="90dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:src="@drawable/right_arrow_icon"
                        android:contentDescription="TODO" />

                    <ImageView
                        android:id="@+id/ivCenterImg3"
                        android:layout_width="0dp"
                        android:layout_height="90dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:src="@drawable/right_arrow_icon"
                        android:contentDescription="TODO" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/rlBigImg"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:id="@+id/ivBigImg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_new_category_tip_dark"
                        android:contentDescription="TODO" />

                    <LinearLayout
                        android:id="@+id/llImgCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_margin="5dp"
                        android:background="@drawable/shape_rectangle_black"
                        android:padding="5dp">

                        <TextView
                            android:id="@+id/tvImgCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/picture_group_icon"
                            android:drawablePadding="2dp"
                            android:gravity="center"
                            android:text="9图"
                            android:textColor="@color/grey"
                            android:textSize="8sp" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/videoRlyt"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_marginTop="10dp"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/ivRightImg2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_new_category_tip_dark"
                        android:contentDescription="TODO" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true"
                        android:scaleType="fitXY"
                        android:src="@mipmap/index_news_live_start"
                        android:contentDescription="TODO" />

                    <LinearLayout
                        android:id="@+id/llVideo1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/shape_rectangle_black"
                        android:padding="5dp"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/tvDuration1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="2dp"
                            android:text="02:05"
                            android:textColor="@color/white"
                            android:textSize="8sp" />
                        <!--android:drawableLeft="@drawable/palyicon_video_textpage"-->
                    </LinearLayout>
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_toLeftOf="@+id/info_llyt"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/news_top"
                            android:layout_width="24dp"
                            android:layout_height="10dp"
                            android:layout_gravity="center_vertical"
                            android:src="@mipmap/index_news_top_icon"
                            android:scaleType="fitXY"
                            android:visibility="gone"
                            android:contentDescription="TODO" />
                        <TextView
                            android:id="@+id/tvAuthorName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:drawableLeft="@mipmap/index_news_author_icon"
                            android:includeFontPadding="false"
                            android:lineSpacingExtra="0.0dip"
                            android:maxLines="1"
                            android:text="  中新网移动版"
                            android:textColor="@color/grey"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/info_llyt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:drawableLeft="@mipmap/index_news_time_icon"
                            android:text="  5分钟前"
                            android:textColor="@color/grey"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/tvCommentCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="评论"
                            android:textColor="@color/grey"
                            android:textSize="10sp" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rlRightImg"
                android:layout_width="130dp"
                android:layout_height="80dp"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/ivRightImg1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_new_category_tip_dark"
                    android:contentDescription="TODO" />

                <LinearLayout
                    android:id="@+id/llVideo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_margin="5dp"
                    android:background="@drawable/shape_rectangle_black"
                    android:padding="5dp"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tvDuration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/palyicon_video_textpage"
                        android:drawablePadding="2dp"
                        android:text="02:05"
                        android:textColor="@color/grey"
                        android:textSize="8sp" />
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

</LinearLayout>
