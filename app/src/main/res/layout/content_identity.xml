<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_identity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.medmeeting.m.zhiyi.UI.MineView.IdentityActivity"
    tools:showIn="@layout/activity_identity">

    <TextView
        android:id="@+id/next_step"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="提交"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@drawable/button_blue_radius"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <RelativeLayout
            android:id="@+id/name_wrap"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="60dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="真实姓名"
                android:textColor="#000000"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/name_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription=""
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:text=""
                android:textColor="#0196ec"
                android:background="@android:color/transparent"/>
            <!--\uE925-->

            <EditText
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:background="@drawable/edittext_delete_line"
                android:hint="请输入真实姓名"
                android:textColor="#000000"
                android:textSize="16sp"
                android:maxLines="1"
                android:layout_marginEnd="16dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/name_tip"
                android:layout_toStartOf="@+id/name_tip"
                android:paddingLeft="18dp"
                android:paddingRight="10dp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#bebcbc"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="60dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机号"
                android:textColor="#000000"
                android:layout_centerVertical="true"/>

            <EditText
                android:id="@+id/phone"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:background="@drawable/edittext_delete_line"
                android:hint="请输入手机号"
                android:textColor="#000000"
                android:textSize="16sp"
                android:maxLines="1"
                android:layout_marginEnd="28dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#bebcbc"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="60dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="所在医院"
                android:textColor="#000000"
                android:layout_centerVertical="true"/>

            <EditText
                android:id="@+id/hospital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:background="@drawable/edittext_delete_line"
                android:hint="请输入所在的医院"
                android:textColor="#000000"
                android:textSize="16sp"
                android:maxLines="1"
                android:layout_marginEnd="28dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#bebcbc"/>

        <RelativeLayout
            android:id="@+id/department_rlyt"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="所在科室"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/department_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:background="@android:color/transparent"
                android:backgroundTint="#ff0000"
                android:contentDescription=""
                android:text="\uE922" />

            <TextView
                android:id="@+id/department"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="请选择所在的科室"
                android:textColor="#949393"
                android:textSize="16sp"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/department_tip"
                android:layout_toStartOf="@+id/department_tip"
                android:layout_marginEnd="10dp"
                android:paddingLeft="18dp"
                android:paddingRight="14dp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="#bebcbc" />

        <RelativeLayout
            android:id="@+id/title_wrap"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="职称"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="请选择您的职称"
                android:textColor="#949393"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/title_tip"
                android:layout_marginRight="26dp"
                android:paddingLeft="18dp"
                android:paddingRight="14dp"/>

            <TextView
                android:id="@+id/title_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:background="@android:color/transparent"
                android:backgroundTint="#ff0000"
                android:contentDescription=""
                android:text="\uE922" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#bebcbc"/>

    </LinearLayout>

</RelativeLayout>
