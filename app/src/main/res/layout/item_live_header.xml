<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_live_cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/live_item_shape"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="4dp"
    app:cardElevation="@null"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="140dp">

            <ImageView
                android:id="@+id/background"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:src="@mipmap/live_background"
                android:scaleType="fitXY"
                android:contentDescription="TODO" />

            <TextView
                android:id="@+id/status"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@mipmap/icon_live_adapter_status_red"
                android:padding="2dp"
                android:layout_margin="10dp"
                android:text="直播"
                android:gravity="center"
                android:textColor="@color/grey1"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/price"
                android:layout_width="44dp"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@mipmap/icon_live_adapter_gray_transparent"
                android:padding="2dp"
                android:layout_margin="10dp"
                android:text="¥ "
                android:gravity="center"
                android:textColor="@color/grey1"
                android:textSize="10sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_margin="3dp">

            <ImageView
                android:id="@+id/avatar"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/live_item_avatar_background"
                android:src="@mipmap/avator_default"
                android:contentDescription="TODO" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:gravity="left"
                    android:text="haha"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:singleLine="true" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:ellipsize="marquee"
                        android:gravity="left"
                        android:text="小鹿 | 哈哈"
                        android:layout_toLeftOf="@+id/time"
                        android:textColor="@color/grey"
                        android:textSize="12sp"
                        android:singleLine="true" />

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:ellipsize="marquee"
                        android:gravity="left"
                        android:text="12:43"
                        android:textColor="@color/grey"
                        android:textSize="12sp"
                        android:singleLine="true" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
